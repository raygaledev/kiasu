generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  email             String   @unique
  username          String?  @unique
  name              String?
  avatarUrl         String?
  profilePictureUrl String?
  role              String   @default("user")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  studyLists StudyList[]
  votes      Vote[]

  @@map("users")
}

model StudyList {
  id          String   @id @default(uuid())
  title       String
  description String?
  slug        String
  category    String   @default("other")
  isPublic    Boolean  @default(true)
  position    Int      @default(0)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  copiedFromId String?
  copiedFrom   StudyList?  @relation("CopiedFrom", fields: [copiedFromId], references: [id], onDelete: SetNull)
  copies       StudyList[] @relation("CopiedFrom")

  user  User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  items StudyItem[]
  votes Vote[]

  @@unique([userId, slug])
  @@index([userId])
  @@index([isPublic])
  @@index([copiedFromId])
  @@map("study_lists")
}

model StudyItem {
  id          String   @id @default(uuid())
  title       String
  notes       String?
  url         String?
  completed   Boolean  @default(false)
  position    Int      @default(0)
  studyListId String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  studyList StudyList @relation(fields: [studyListId], references: [id], onDelete: Cascade)

  @@index([studyListId])
  @@map("study_items")
}

enum VoteType {
  UP
  DOWN
}

model Vote {
  id          String   @id @default(uuid())
  type        VoteType
  userId      String
  studyListId String
  createdAt   DateTime @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  studyList StudyList @relation(fields: [studyListId], references: [id], onDelete: Cascade)

  @@unique([userId, studyListId])
  @@index([studyListId])
  @@index([userId])
  @@map("votes")
}
